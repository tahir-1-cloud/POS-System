@model ABC.EFCore.Repository.Edmx.ForgetPassword
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("ChangePassword" , "Account", FormMethod.Post))
{
    <div class="my-3 container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5 col-xl-5">
                <div class="card mx-4 bg-light">
                    <div class="card-body">
                        <div class="d-flex p-3">
                            <div class="ms-auto text-end">
                                <h4 class="font-size-18">Password Change</h4>
                            </div>
                        </div>
                        <div class="p-3 form-horizontal">
                            <div class="form-group mb-3">
                                <label for="textPassword" class="form-label">Current Password:</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "textPassword" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mb-3">
                                <label for="textConfirmPassword" class="form-label">New Password:</label>
                                @Html.PasswordFor(model => model.NewPasswords, new { @class = "form-control", id = "textConfirmPassword" })
                                @Html.ValidationMessageFor(model => model.NewPasswords, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mb-3">
                                <label for="textConfirmPassword" class="form-label">Confirm New Password:</label>
                                @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "form-control", id = "textConfirmPassword" })
                                @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mb-3 text-center">
                                <button class="btn btn-success" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

}

